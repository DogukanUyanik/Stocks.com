{
  "name": "stocks",
  "version": "1.0.0",
  "description": "Demo application for the course Web Services.",
  "main": "index.ts",
  "repository": "git@github.com:HOGENT-frontendweb/webservices-budget.git",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@4.4.0",
  "scripts": {
    "start:dev": "tsx watch --env-file .env --inspect=0.0.0.0:9001 src/index.ts",
    "start": "node dist/index.js",
    "generate-stocks": "tsx src/scripts/generateStockData.ts",
    "update-stock-prices": "tsx src/scripts/updateStockPrices.ts",
    "build": "tsc",
    "lint": "eslint .",
    "migrate:dev": "prisma migrate dev",
    "migrate:test": "env-cmd -f .env.test prisma migrate dev --skip-seed",
    "test": "env-cmd -f .env.test jest --runInBand",
    "test:coverage": "env-cmd -f .env.test jest --runInBand --coverage",
    "seed": "tsx ./src/data/seed.ts"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^13.1.0",
    "@prisma/client": "^6.0.1",
    "argon2": "^0.41.1",
    "config": "^3.3.12",
    "dotenv": "^16.4.7",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "koa": "^2.15.3",
    "koa-bodyparser": "^4.4.1",
    "koa-helmet": "7.0.2",
    "koa2-swagger-ui": "^5.11.0",
    "nodemailer": "^6.9.16",
    "prisma": "^6.0.1",
    "swagger-jsdoc": "^6.2.8",
    "winston": "^3.15.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/config": "^3.3.5",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9",
    "@types/koa": "^2.15.0",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/node": "^22.7.5",
    "@types/nodemailer": "^6",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6",
    "env-cmd": "^10.1.0",
    "eslint": "^9.12.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.9.0"
  },
  "prisma": {
    "schema": "src/data/schema.prisma",
    "seed": "tsx ./src/data/seed.ts"
  },
  "engines": {
    "node": "20.6.0",
    "yarn": "4.4.0"
  }
}
